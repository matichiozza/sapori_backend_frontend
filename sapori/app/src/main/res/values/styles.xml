<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PopupDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- Opacidad del fondo -->
    </style>

</resources>
