<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:visibility="visible"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/popup_container"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_white_rounded1"
        android:padding="20dp"
        android:elevation="8dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/icono_check"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cómo quieres recibir tu reintegro?"
            android:textSize="18sp"
            android:textColor="#333333"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtMontoReintegro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E8137"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppinsbold" />

        <TextView
            android:id="@+id/txtPorcentajeReintegro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0% del valor del curso"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppinsmedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnReintegroTarjeta"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Reintegro a mi tarjeta"
                android:backgroundTint="#2E8137"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnSaldoFavor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Saldo a favor en cuenta corriente"
                android:backgroundTint="#4A90E2"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppinssemibold" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout> 