<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#F0EBE4"
                android:layout_marginBottom="201dp"
                android:elevation="5dp">

                <ImageView
                    android:id="@+id/flecha"
                    android:layout_width="38dp"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="75dp"
                    android:src="@drawable/flecha" />

                <ImageView
                    android:id="@+id/logo_sapori"
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="65dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo_sapori" />
            </RelativeLayout>

            <!-- Campo: Nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Nombre"
                        android:textColor="#838383"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="7dp"
                        android:layout_marginStart="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <EditText
                        android:id="@+id/et_nombre"
                        android:inputType="textPersonName"
                        android:textColor="#424242"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg_rounded"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="13dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Campo: Apellido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Apellido"
                        android:textColor="#838383"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="7dp"
                        android:layout_marginStart="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <EditText
                        android:id="@+id/et_apellido"
                        android:inputType="textPersonName"
                        android:textColor="#424242"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg_rounded"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="13dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Campo: Contraseña -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Contraseña"
                        android:textColor="#838383"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="7dp"
                        android:layout_marginStart="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <EditText
                        android:id="@+id/et_password"
                        android:inputType="textPassword"
                        android:textColor="#424242"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg_rounded"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="13dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Campo: Repetir Contraseña -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Repetir contraseña"
                        android:textColor="#838383"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="7dp"
                        android:layout_marginStart="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <EditText
                        android:id="@+id/et_password_repeat"
                        android:inputType="textPassword"
                        android:textColor="#424242"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg_rounded"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="13dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botón: Finalizar Registro -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_finalizar_registro"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_bg_rounded_1"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="26dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="FINALIZAR REGISTRO"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/nav_selector"
        app:itemTextColor="@color/nav_selector"
        app:itemBackground="@drawable/bottom_nav_item_background"/>
</LinearLayout>
