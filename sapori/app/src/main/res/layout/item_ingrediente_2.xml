<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_horizontal">

    <!-- Recuadro blanco con sombra para la imagen -->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_card_white_rounded"
        android:elevation="4dp"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imagen_ingrediente"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <!-- Nombre del ingrediente -->
    <TextView
        android:id="@+id/txtNombreIngrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del ingrediente"
        android:textColor="#363636"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginTop="6dp" />

    <!-- Cantidad del ingrediente -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/txtCantidadIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textColor="#969696"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtunidadIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#969696"
            android:textSize="10sp"
            android:layout_marginStart="4dp" />

    </LinearLayout>
</LinearLayout>
