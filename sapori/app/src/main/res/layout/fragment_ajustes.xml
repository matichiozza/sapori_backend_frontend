<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_patrones"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/r99zcxb3b0ff"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#F0EBE4"
            android:layout_marginBottom="20dp"
            android:elevation="5dp">


            <ImageView
                android:id="@+id/logo_sapori"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="65dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_sapori" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AJUSTES"
            android:textColor="#FFFFFF"
            android:textSize="38sp"
            android:background="@drawable/edittext_bg_rounded_2"
            android:paddingHorizontal="100dp"
            android:paddingVertical="8dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="40dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/btn_perfil"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:text="MIS DATOS PERSONALES"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:fontFamily="@font/poppinsbold"
                android:background="@drawable/rectangle_5"
                android:gravity="center" />

            <TextView
                android:id="@+id/btn_cambiar_contrasenia_2"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:text="CAMBIAR CONTRASEÑA"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:fontFamily="@font/poppinsbold"
                android:background="@drawable/rectangle_5"
                android:gravity="center" />

            <TextView
                android:id="@+id/btn_cambiar_rol"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:text="PASAR A ALUMNO"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:fontFamily="@font/poppinsbold"
                android:background="@drawable/rectangle_5"
                android:gravity="center" />
            <TextView
                android:id="@+id/btn_cuenta_corriente"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:text="CUENTA CORRIENTE"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:fontFamily="@font/poppinsbold"
                android:background="@drawable/rectangle_5"
                android:gravity="center" />
        </LinearLayout>

        <!-- BOTÓN CERRAR SESIÓN (fuera del grupo de botones anteriores) -->
        <TextView
            android:id="@+id/btn_cerrar_sesion"
            android:layout_width="305dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="320dp"
            android:background="@drawable/boton_rojo_bg"
            android:backgroundTint="#960202"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="CERRAR SESIÓN"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />
    </LinearLayout>

</ScrollView>