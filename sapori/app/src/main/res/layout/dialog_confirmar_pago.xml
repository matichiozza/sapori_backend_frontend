<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_popup_rounded"
    android:padding="24dp">

    <!-- Icono de confirmación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/iconocheck2"
            android:padding="16dp" />

    </LinearLayout>

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Pago"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Detalles del pago -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_white_rounded"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/txtCursoPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curso: Cocina italiana básica"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtImportePago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Importe: $15,000.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtFechaVencimientoPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vence: 31/12/2024"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>

    <!-- Mensaje de confirmación -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Estás seguro de que deseas marcar este pago como realizado?"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCELAR"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:background="@drawable/boton_blanco"
            android:layout_marginEnd="8dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btnConfirmar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CONFIRMAR"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/boton_verde"
            android:layout_marginStart="8dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout> 