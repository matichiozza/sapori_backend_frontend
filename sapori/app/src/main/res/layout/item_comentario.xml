<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="top">

    <!-- Imagen de perfil redondeada -->
    <ImageView
        android:id="@+id/imgPerfilUsuario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:background="@drawable/bg_circular"
        android:clipToOutline="true" />

    <!-- Contenedor del contenido del comentario -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUsuarioComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000" />

        <RatingBar
            android:id="@+id/ratingBarComentario"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:rating="0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtTextoComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto del comentario"
            android:textSize="15sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/txtFechaComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="6dp" />

    </LinearLayout>

</LinearLayout>
